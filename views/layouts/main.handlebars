<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
      integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/assets/css/style.css" />

    <title>Bon Appetit</title>
  </head>
  <body>

    <nav class="navbar main-bg d-flex justify-content-between">
      <div class="container">

        <div class="">
          {{#if isLoggedIn}}
          <a id="logo" class="navbar-brand" href="/home">          
            <i class="fa-solid fa-champagne-glasses"></i>
            Bon Appetit
          </a>
          {{else}}
          <a id="logo" class="navbar-brand" href="/login">          
            <i class="fa-solid fa-champagne-glasses"></i>
            Bon Appetit
          </a> 
          {{/if}}

        </div>
        <div class="d-inline-block m-2">
          {{#if isLoggedIn}}
            <button id="profileBtn" class="btn mx-2">Profile</button>
            <button id="orderOnlineBtn" class="btn mx-2">Order Online</button>
            <button id="reserveTableBtn" class="btn mx-2">Reserve a Table</button>
            <button id="signoutBtn" class="btn mx-2">Sign Out</button>
          {{else}}
            <button id="mainLoginBtn" class="btn mx-2">Login</button>
            <button id="mainSignUpBtn" class="btn mx-2">Sign Up</button>
          {{/if}}
        </div>

      </div>
    </nav>

    <div class="main-container">
      {{{body}}}
    </div>

    <footer class="main-bg text-center py-1">
      <div class="container">
        <p>Copyright &copy; 2022, Bon Appetit, All Rights Reserved</p>
      </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script src="/assets/js/main.js"></script>

  </body>
</html>